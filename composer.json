{
    "name": "garak/card",
    "type": "library",
    "description": "A PHP library to manage generic card games",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "garakkio@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || ^11.5 || ^12.2"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Garak\\Card\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Garak\\Card\\Test\\": "tests"
        }
    }
}
